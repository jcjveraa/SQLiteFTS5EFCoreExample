@model IEnumerable<SQLiteFTS5Example.Models.SongsFts5>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ArtistName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleString)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseString)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ArtistNameString)
            </td>
            
            <td>
                <a asp-action="Details" asp-route-id="@item.TrackIdString">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
